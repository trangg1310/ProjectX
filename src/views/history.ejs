    #nav, .subnav{
      list-style: none;
    }
    #nav > li{
      display: inline-block;
    }
    #nav li{
      position: relative;
      right: 32px;
    }

    #nav > li > a{
      color: #fff;
      text-transform: uppercase;
    }

    #nav li a{
      text-decoration: none;
      line-height: 46px;
      padding: 0 20px;
      display: block;
    }
    #nav li:hover .subnav{
      display: block;
    }

    #nav > li:hover > a{
      color: #000;
      background-color: #ccc;
    }

    #nav .subnav{
      display: none;
      position: absolute;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
      width: 150px;
    }
    #nav .subnav a{
      color: #000;
    }
    #nav .subnav li:hover{
      color: #000;
      background-color: #ccc;
      opacity:1;
      width: 150px;
    }

      /* Phần ICON*/
      #header .search-btn_tem{
        float: right;
        padding: 0 15px;
        cursor: pointer;
      }

      #search-box{
        background: #000;
        height: 46px;
      }
      #search-box #search-text{
        background-color: #fff;
        border: none;
        outline: none;
        padding: 10px 0px;
        font-size: 20px;
        width: 0px;
        transition: all 0.25s ease-in-out;
      }
      #header #search-box #search-btn{
        color: #fff;
        background-color: #000;
        height: 30px;
        border: none;
        outline: none;
        padding: 10px;
        font-size: 20px;
        margin-top: -2px;
        cursor: pointer;
      }
      #header #search-box:hover #search-text {
        width: 300px;
        padding: 0 10px ;
      }
      ::placeholder{
        font-size: 15px;
      }


      /* user */
      #header .user-btn{
        float: right;
        padding: 0 15px;
        cursor: pointer;
      }
      #header .user-icon{
        color: #fff;
        font-size: 20px;
        line-height: 46px;
      }

      /* shopping */
      #header .shopping-btn{
        float: right;
        padding: 0 15px;
        cursor: pointer;
      }
      #header .shopping-btn a{
        text-decoration: none;
      }
      #header .shopping-icon{
        color: #fff;
        font-size: 20px;
        line-height: 46px;
      }
      #header .shopping-icon:hover{
        color: #fff;
      }
      .shopping-btn{
        position: relative;
      }
      .shopping-btn:hover .shopping_list{
        display: none; /*Hieen len la block*/
      }
      .shopping_list{
        position: absolute;
        top: 100%;
        margin-top: 4px;
        right: 10px;
        background-color: #000;
        width: 300px;
        border-radius: 12px;
        box-shadow: 0 1px 10px #ccc;
        display: none;
      }
      .shopping_list--no-item{
        padding: 28px 0;
      }
      .shopping-no-item-img{
        width: 100%;
        display: none;
      }
      .shopping-notice{
        position: absolute;
        padding: 6px 2px;
        line-height: 2rem;
        background-color:#000;
        color: #fff;
        top: -8px;
        font-size: 15px;
      }
      #header .shopping-icon{
        color: #fff;
        font-size: 20px;
        line-height: 46px;
      }

